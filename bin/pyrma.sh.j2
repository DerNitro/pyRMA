#!/bin/bash

export LC_ALL=$(locale -a|grep -ix 'c.utf-\?8' || echo C)
export SHELL=/bin/bash 

umask 0002

TTYREC=/usr/bin/asciinema

data_dir={{ app_data_dir }}
file_rec=$(id -u)_$(date +%Y-%m-%d_%H:%M:%S.%s)
file_path=filerecords/$(date +%Y/%m/%d)

export file_rec file_path

mkdir -p "$data_dir"/"$file_path"

$TTYREC rec -c "/usr/bin/python3 {{ app_folder }}/bin/pyrma.py" "$data_dir"/"$file_path"/"$file_rec"

exit 0
